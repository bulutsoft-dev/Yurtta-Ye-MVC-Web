@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model YurttaYe.Core.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    ViewData["BreadcrumbItems"] = new List<dynamic>
    {
        new { Text = "Kullanıcı Yönetimi", Icon = "fas fa-users", Url = Url.Action("Index", "AdminUser", new { area = "Admin" }) },
        new { Text = "Kullanıcı Düzenle", Icon = "fas fa-user-edit", Url = (string?)null }
    };
}

@Html.AntiForgeryToken()

<!-- Main Content -->
<div class="max-w-2xl mx-auto">
    <!-- Info Card -->
    <div class="admin-card bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl p-6 mb-6 border border-green-200">
        <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center mr-4">
                <i class="fas fa-user-edit text-white text-xl"></i>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900">Kullanıcı Düzenle</h3>
                <p class="text-sm text-gray-600">
                    <span class="font-medium text-green-700">@Model.UserName</span> kullanıcısının bilgilerini güncelleyin.
                </p>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="admin-card bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-green-600 to-emerald-600 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
                <i class="fas fa-user mr-3"></i>
                Kullanıcı Bilgileri
            </h2>
        </div>

        <form asp-area="Admin" asp-controller="AdminUser" asp-action="Edit" method="post" class="p-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-circle text-red-500 mr-3 mt-0.5"></i>
                        <div>
                            <h4 class="text-red-800 font-medium mb-2">Lütfen hataları düzeltin:</h4>
                            <div asp-validation-summary="All" class="text-red-700 text-sm"></div>
                        </div>
                    </div>
                </div>
            }
            
            <!-- Username -->
            <div class="mb-5">
                <label asp-for="UserName" class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-user text-green-500 mr-2"></i>
                    Kullanıcı Adı <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-at text-gray-400"></i>
                    </div>
                    <input asp-for="UserName" 
                           class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors text-gray-900" 
                           placeholder="örnek: admin_user" />
                </div>
                <span asp-validation-for="UserName" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Email -->
            <div class="mb-5">
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-envelope text-green-500 mr-2"></i>
                    E-posta <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-envelope text-gray-400"></i>
                    </div>
                    <input asp-for="Email" type="email"
                           class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors text-gray-900" 
                           placeholder="ornek@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Phone -->
            <div class="mb-5">
                <label asp-for="PhoneNumber" class="block text-sm font-semibold text-gray-700 mb-2">
                    <i class="fas fa-phone text-green-500 mr-2"></i>
                    Telefon
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-phone text-gray-400"></i>
                    </div>
                    <input asp-for="PhoneNumber" type="tel"
                           class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors text-gray-900" 
                           placeholder="+90 5XX XXX XX XX" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Password Change Section -->
            <div class="bg-yellow-50 rounded-lg p-4 mb-5 border border-yellow-200">
                <h4 class="text-sm font-semibold text-gray-700 mb-4 flex items-center">
                    <i class="fas fa-lock text-yellow-600 mr-2"></i>
                    Şifre Değiştir (İsteğe Bağlı)
                </h4>
                
                <p class="text-xs text-yellow-700 mb-4">
                    <i class="fas fa-info-circle mr-1"></i>
                    Şifreyi değiştirmek istemiyorsanız bu alanları boş bırakın.
                </p>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- New Password -->
                    <div>
                        <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2">
                            Yeni Şifre
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-key text-gray-400"></i>
                            </div>
                            <input asp-for="NewPassword" type="password" id="new-password"
                                   class="w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors text-gray-900" 
                                   placeholder="••••••••" />
                            <button type="button" onclick="togglePassword('new-password')" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <i class="fas fa-eye text-gray-400 hover:text-gray-600" id="new-password-toggle"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Confirm New Password -->
                    <div>
                        <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-700 mb-2">
                            Şifre Tekrar
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-key text-gray-400"></i>
                            </div>
                            <input asp-for="ConfirmNewPassword" type="password" id="confirm-new-password"
                                   class="w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors text-gray-900" 
                                   placeholder="••••••••" />
                            <button type="button" onclick="togglePassword('confirm-new-password')" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                <i class="fas fa-eye text-gray-400 hover:text-gray-600" id="confirm-new-password-toggle"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmNewPassword" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>
            </div>

            <!-- Options -->
            <div class="bg-green-50 rounded-lg p-4 mb-6 border border-green-200">
                <h4 class="text-sm font-semibold text-gray-700 mb-4 flex items-center">
                    <i class="fas fa-cog text-green-500 mr-2"></i>
                    Kullanıcı Ayarları
                </h4>
                
                <div class="space-y-3">
                    <label class="flex items-center cursor-pointer">
                        <input asp-for="IsAdmin" type="checkbox" 
                               class="w-5 h-5 text-green-600 border-gray-300 rounded focus:ring-green-500 mr-3" />
                        <div>
                            <span class="font-medium text-gray-900">Admin Rolü</span>
                            <p class="text-xs text-gray-500">Kullanıcıya admin paneli erişim yetkisi ver</p>
                        </div>
                    </label>
                    
                    <label class="flex items-center cursor-pointer">
                        <input asp-for="EmailConfirmed" type="checkbox" 
                               class="w-5 h-5 text-green-600 border-gray-300 rounded focus:ring-green-500 mr-3" />
                        <div>
                            <span class="font-medium text-gray-900">E-posta Onaylı</span>
                            <p class="text-xs text-gray-500">Kullanıcının e-posta adresi onaylı</p>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Divider -->
            <div class="border-t border-gray-200 my-6"></div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-between">
                <a asp-area="Admin" asp-controller="AdminUser" asp-action="Index" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Listeye Dön
                </a>
                
                <div class="flex items-center space-x-3">
                    <button type="button" onclick="history.back()" 
                            class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="fas fa-times mr-2"></i>
                        İptal
                    </button>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-2 bg-gradient-to-r from-green-600 to-emerald-600 text-white rounded-lg hover:from-green-700 hover:to-emerald-700 transition-all shadow-lg transform hover:scale-105">
                        <i class="fas fa-save mr-2"></i>
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showAdminNotification('@TempData["Success"]', 'success');
        });
    </script>
}
@if (TempData["Error"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showAdminNotification('@TempData["Error"]', 'error');
        });
    </script>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(inputId + '-toggle');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
}
